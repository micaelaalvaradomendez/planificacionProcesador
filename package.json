{
	"name": "planificacionprocesador",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"deploy": "gh-pages -d build -t true",
		"deploy:gh": "npm run build && npm run deploy",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test": "npx tsx tests/core/test-motor.ts",
		"test:core": "npx tsx tests/core/test-motor.ts",
		"test:algorithms": "find tests/algorithms -name '*.ts' -exec npx tsx {} \\;",
		"test:logging": "find tests/logging -name '*.ts' -exec npx tsx {} \\;",
		"test:gantt": "npx tsx tests/gantt/test-construccion-gantt.ts",
		"test:integracion": "npx tsx tests/integracion/test-completo.ts",
		"test:parser": "npx tsx tests/parsers/test-txt-parser.ts",
		"demo:parser": "npx tsx demos/demo-parser-txt.ts",
		"test:all": "npm run test:core && npm run test:algorithms && npm run test:logging && npm run test:gantt && npm run test:integracion",
		"demo": "npx tsx demo-integrador.ts",
		"demo:clean": "rm -f eventos.json eventos.csv && npm run demo",
		"demo:gantt": "npx tsx demo-gantt-integrado.ts",
		"demo:gantt:clean": "rm -f demo-gantt.json demo-gantt.csv && npm run demo:gantt",
		"clean:test": "rm -f test-*.json test-*.csv validacion-*.json validacion-*.csv"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^6.0.0",
		"@sveltejs/adapter-static": "^3.0.9",
		"@sveltejs/kit": "^2.22.0",
		"@sveltejs/vite-plugin-svelte": "^6.0.0",
		"@types/node": "^24.3.0",
		"gh-pages": "^6.3.0",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"typescript": "^5.0.0",
		"vite": "^7.0.4"
	}
}
