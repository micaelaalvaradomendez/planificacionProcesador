      +debeExpropiar(actual: Proceso, candidato: Proceso, tiempo: number): boolean
      +reiniciar(): void
    }

    class EstrategiaSchedulerPrioridad {
      +nombre: "PRIORITY"
      +soportaExpropiacion: true
      +requiereQuantum: false
